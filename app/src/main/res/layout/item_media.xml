<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/file_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/ic_video" />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/file_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:text="@string/app_name"
    android:textColor="@color/black"
    app:layout_constraintStart_toEndOf="@+id/file_type"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:text="file 1" />

  <ProgressBar
    android:id="@+id/progress_download"
    android:visibility="invisible"
    app:layout_constraintTop_toTopOf="@+id/download_img"
    app:layout_constraintBottom_toBottomOf="@id/download_img"
    app:layout_constraintEnd_toEndOf="@id/download_img"
    app:layout_constraintStart_toStartOf="@id/download_img"
    android:layout_width="45dp"
    android:layout_height="45dp"/>

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/download_img"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/ic_download" />

</androidx.constraintlayout.widget.ConstraintLayout>
